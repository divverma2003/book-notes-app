<main class="books-container">
    <h1>Books</h1>
    <% if (books.length === 0) { %>
      <p>No books found.</p>
    <% } else { %>
      <ul class="books-list">
        <% books.forEach(book => { %>
          <li class="book-item">
            <img src="<%= book.book_cover || '/img/placeholder.jpg' %>" alt="Cover of <%= book.title %>" class="review-book-cover" />
            <div class="book-info">
              <h2><%= book.title %></h2>
              <p><strong>ISBN:</strong> <%= book.isbn13 %></p>
              <p><strong>Author:</strong> <%= book.author %></p>
              <p><strong>Genre:</strong> <%= book.genre || 'N/A' %></p>
              <p><strong>Pages:</strong> <%= book.page_count %></p>
              <p><strong>Published:</strong> <%= book.date_published ? book.date_published.toISOString().slice(0,10) : 'Unknown' %></p>
              <p><strong>Average Rating:</strong> <%= book.average_rating %></p>
              <p class="book-summary"><%= book.summary || 'No summary available.' %></p>
            </div>

            <% if (user) { %>
              <div class="book-actions">
                <a href="/auth/<%= book.book_id %>/edit-book" class="btn btn-edit" title="Edit Book">‚úèÔ∏è Edit</a>
                <a href="/auth/<%= user.user_id %>/add-review?book_id=<%= book.book_id %>" class="btn btn-review" title="Add Review for <%= book.title %>">üìù Add Review</a>
              </div>
            <% } %>
          </li>
        <% }) %>
      </ul>
      <div class="pagination-container">
        <a href="?page=<%= page - 1 %>" class="btn btn-prev<%= page > 1 ? '' : ' d-none' %>">&lt; Previous Page</a>
        <p class ="pagination-info">Page <%= page %></p>
        <a href="?page=<%= nextPage %>" class="btn btn-next<%= nextPage ? '' : ' d-none' %>">Next Page &gt;</a>
      </div>
    <% } %>
  </main>

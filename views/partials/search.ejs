<form id="search-form" method="POST" action="/books" class="search-form">
  <div class="search-toggle">
    <label>
      <input type="radio" name="searchType" value="books" checked>
      Books
    </label>
    <label>
      <input type="radio" name="searchType" value="users">
      Users
    </label>
  </div>

  <input
    type="text"
    name="query"
    placeholder="Search..."
    required
    class="search-input"
  />

  <button type="submit" class="btn btn-primary">Search</button>
</form>

<script>
  const form = document.getElementById('search-form');
  const radios = form.elements['searchType'];

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    let action = '/books';
    for (const radio of radios) {
      if (radio.checked) {
        action = radio.value === 'users' ? '/users' : '/books';
        break;
      }
    }
    form.action = action;
    form.submit();
  });
</script>

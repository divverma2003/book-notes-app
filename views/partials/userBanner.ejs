<aside class="user-banner">
  <div class="user-info">
    <p><strong>ID:</strong> <%= user.user_id %></p>
    <p><strong>Name:</strong> <%= user.name %></p>
    <p><strong>Email:</strong> <%= user.email %></p>
    <p><strong>About:</strong> <%= user.about || 'N/A' %></p>
    <p><strong>Phone:</strong> <%= user.phone || 'N/A' %></p>
    <p><strong>Favorite Book:</strong> 
      <% if (user.favorite_book_title) { %>
        <%= user.favorite_book_title %>
      <% } else { %>
        N/A
      <% } %>
    </p>
  </div>
  <a href="/auth/user/edit/<%= user.user_id %>" class="edit-icon" title="Edit Profile" aria-label="Edit Profile">
    ✏️
  </a>
</aside>

<main class="form-container">
    <h2 class="form-title">Sign Up</h2>

    <% if (typeof error !== 'undefined') { %>
        <p class="form-error"><%= error %></p>
    <% } %>

    <form action="/register" method="POST" class="form">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" required placeholder="Your full name">

        <label for="email">Email</label>
        <input type="email" name="email" id="email" required placeholder="you@example.com">

        <label for="password">Password</label>
        <input type="password" name="password" id="password" required placeholder="Create a password">

        <label for="phone">Phone (optional)</label>
        <input type="tel" name="phone_number" id="phone_number" placeholder="(555) 123-4567">

        <label for="about">About You</label>
        <textarea name="about" id="about" rows="3" placeholder="Tell us something about yourself"></textarea>

        <label for="favorite_book">Favorite Book</label>
        <select name="favorite_book_id" id="favorite_book_id">
        <option value="" disabled selected><%= locals.books ? 'Select a book' : 'No books available' %></option>
        <% if (locals.books) { %>
            <% books.forEach(book => { %>
                <option value="<%= book.book_id %>"><%= book.title %></option>
            <% }) %>
        <% } %>
        </select>

        <label for="user_color">Dashboard Theme</label>
        <div class="theme-grid">
            <label class="theme-box pastel-blue">
                <input type="radio" name="user_color" value="pastel-blue" required>
            </label>
            <label class="theme-box pastel-green">
                <input type="radio" name="user_color" value="pastel-green">
            </label>
            <label class="theme-box pastel-yellow">
                <input type="radio" name="user_color" value="pastel-yellow">
            </label>
            <label class="theme-box pastel-pink">
                <input type="radio" name="user_color" value="pastel-pink">
            </label>
            <label class="theme-box pastel-purple">
                <input type="radio" name="user_color" value="pastel-purple">
            </label>
            <label class="theme-box pastel-orange">
                <input type="radio" name="user_color" value="pastel-orange">
            </label>
            <label class="theme-box pastel-red">
                <input type="radio" name="user_color" value="pastel-red">
            </label>
            <label class="theme-box pastel-gray">
                <input type="radio" name="user_color" value="pastel-gray">
            </label>
            <label class="theme-box pastel-brown">
                <input type="radio" name="user_color" value="pastel-brown">
            </label>
        </div>

        <button type="submit" class="btn btn-primary btn-center">Sign Up</button>
    </form>
    <p class="form-footer-text">
        Already have an account? <a href="/login">Login here</a>
    </p>
</main>
